  "paths": {
    "/items": {
      "get": {
        "tags": [
          "Top Stories"
        ],
        "summary": "Get lineup for CBC News Top Stories lineup",
        "operationId": "getTopStoriesLineup",
        "parameters": [
          {
            "name": "lineupSlug",
            "in": "query",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string",
              "default": "news"
            }
          },
          {
            "name": "categorySet",
            "in": "query",
            "description": "CategorySet",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string",
              "default": "cbc-news-apps"
            }
          },
          {
            "name": "excludeCategorySet",
            "in": "query",
            "description": "excludeCategorySet",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string",
              "default": "cbc-news-apps-exclude"
            }
          },
          {
            "name": "typeSet",
            "in": "query",
            "description": "typeSet",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string",
              "default": "cbc-news-apps-feed-v2"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "description": "PageSize",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LineupItemDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid call"
          },
          "404": {
            "description": "Lineup not found"
          }
        }
      }
    }
  },
